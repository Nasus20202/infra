{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "Europe/Warsaw",
  "labels": ["version-update"],
  "dependencyDashboardTitle": "Version Updates Dashboard",
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "commitMessagePrefix": "chore:",
  "semanticCommits": "enabled",
  "dependencyDashboard": true,
  "automergeType": "pr",
  "automergeStrategy": "rebase",
  "automergeSchedule": ["* 0-7 * * *"],
  "platformAutomerge": false,
  "rebaseWhen": "conflicted",
  "separateMultipleMinor": true,
  "separateMultipleMajor": true,
  "additionalBranchPrefix": "{{packageFile}}/",
  "commitMessageSuffix": "in {{packageFile}}",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "versioning": "docker"
    }
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/kubernetes/oci/compute/cluster/applications/.+\\.ya?ml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/kubernetes/oci/compute/cluster/argocd-apps/.+\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/kubernetes/oci/compute/cluster/applications/.+values\\.ya?ml$/"
    ]
  }
}
